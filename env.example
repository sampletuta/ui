# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=backend.settings_docker

# Database Settings
POSTGRES_DB=face_ai_db
POSTGRES_USER=face_ai_user
POSTGRES_PASSWORD=face_ai_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis Settings
REDIS_URL=redis://redis:6379/0

# Milvus Settings (External Service)
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=watchlist
MILVUS_COLLECTION_PREFIX=surveillance_
MILVUS_DIMENSION=512
MILVUS_METRIC_TYPE=COSINE
MILVUS_INDEX_TYPE=IVF_FLAT
MILVUS_INDEX_NLIST=1024
MILVUS_SEARCH_NPROBE=10
MILVUS_AUTO_CREATE_COLLECTION=True
MILVUS_AUTO_LOAD_COLLECTION=True

# Face AI Settings
FACE_DETECTION_SERVICE_URL=http://localhost:5000/api/face-detection/
FACE_AI_MAX_WORKERS=4
FACE_AI_BATCH_SIZE=10
FACE_AI_THREAD_POOL_SIZE=8
FACE_AI_ENABLE_GPU=false
FACE_AI_GPU_MEMORY_LIMIT=4GB

# Data Ingestion Service Settings
DATA_INGESTION_SERVICE_URL=http://localhost:8001
DATA_INGESTION_TIMEOUT=30

# File Upload Settings
CHUNKED_UPLOAD_THRESHOLD=104857600

# Base URL
BASE_URL=http://localhost:8000

# Downstream Service Configuration
# Set to 'true' to enable sending stream data to external services
DOWNSTREAM_SERVICE_ENABLED=false

# URL of your downstream service (e.g., analytics, recording, processing service)
DOWNSTREAM_SERVICE_URL=https://your-downstream-service.com/api/streams

# API token for authentication with downstream service
DOWNSTREAM_SERVICE_TOKEN=your-api-token-here

# Request timeout in seconds
DOWNSTREAM_SERVICE_TIMEOUT=10

# Number of retry attempts for failed requests
DOWNSTREAM_SERVICE_RETRY_ATTEMPTS=3

# Batch size for sending multiple events
DOWNSTREAM_SERVICE_BATCH_SIZE=100

# Enable/disable analytics data sending
DOWNSTREAM_SERVICE_ENABLE_ANALYTICS=true

# Enable/disable real-time event sending
DOWNSTREAM_SERVICE_ENABLE_EVENTS=true

